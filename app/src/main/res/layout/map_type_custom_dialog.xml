<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp">

        <FrameLayout
            android:id="@+id/road_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/la_poste"
            android:padding="3dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_map_type_roads"
                android:contentDescription="@string/road"/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/road_image"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="@string/road"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/satellite_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/la_poste"
            android:padding="3dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_map_type_satellite"
                android:contentDescription="@string/satellite"/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/satellite_image"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="@string/satellite"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>